<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.gb.calculatorapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label=""
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/CalculatorLightTheme">
        <activity android:name=".ChangeThemeActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter android:label="ru.gb.calculatorapp.MainActivity">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Принимаем URI с началом "example://intent" -->
                <data
                    android:host="intent"
                    android:scheme="example" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
    </application>

</manifest>