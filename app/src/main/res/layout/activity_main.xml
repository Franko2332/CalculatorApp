<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LayoutStyle"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_layout_height"
        android:layout_gravity="bottom"
        android:columnCount="4"
        android:paddingStart="5dp"
        android:paddingEnd="13dp"
        android:paddingBottom="15dp"
        android:rowCount="8">

        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/calcEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:text="@string/zero"
            android:textSize="@dimen/edit_text_text_size" />
        <!--        <TextView-->
        <!--            android:layout_marginBottom="10dp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_columnSpan="4"-->
        <!--            android:layout_gravity="fill_horizontal"-->
        <!--            android:gravity="right"-->
        <!--            android:autofillHints=""-->
        <!--            android:inputType="number"-->
        <!--            android:textSize="30sp" />-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/MC"
            style="@style/OtherOperationsButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/MC" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/M_PLUS"
            style="@style/OtherOperationsButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/M_PLUS" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/M_MINUS"
            style="@style/OtherOperationsButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/M_MINUS" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MR"
            style="@style/OtherOperationsButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/MR" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DIVISION"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/division" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MULTIPLE"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/multiple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_digit"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/seven" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/eight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/nine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MINUS"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/four" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/five" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/six" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/PLUS"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/plus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/one" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/two" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/three" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/EQUALS"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/equals" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/PERCENT"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/percent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/zero" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/COMMA"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/comma" />

    </GridLayout>
</FrameLayout>
