            <com.google.android.material.button.MaterialButton
                android:id="@+id/X_SQUARED"
                style="@style/OtherOperationsButtonStyle"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="@string/x_squared" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/X_CUBE"
                style="@style/OtherOperationsButtonStyle"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="@string/x_cube" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DIVISION"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/division" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MULTIPLE"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/multiple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_digit"
            style="@style/MainOperationsButtonsStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/delete" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/EXHIBITOR"
            style="@style/OtherOperationsButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/exhibitor" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/LN"
            style="@style/OtherOperationsButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/ln" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/seven" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/eight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            style="@style/NumbersButtonStyle"
            android:layout_rowWeight="1"
