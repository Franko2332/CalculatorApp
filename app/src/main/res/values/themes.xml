<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CalculatorLightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
       <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:itemBackground">#FFFFFF</item>

    </style>
    <style name="CalculatorDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="backgroundColor">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">@null</item>
        <item name="android:itemBackground">#3C3C3C</item>
    </style>
    <style name="CalculatorGrayTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="backgroundColor">#878686</item>
        <item name="android:colorBackground">#878686</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:itemBackground">#878686</item>
    </style>
</resources>